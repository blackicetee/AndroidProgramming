<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Red"
                android:id="@+id/btnRed"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Green"
                android:id="@+id/btnGreen"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Blue"
                android:id="@+id/btnBlue"/>
    </LinearLayout>
</LinearLayout>