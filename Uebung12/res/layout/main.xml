<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            >
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activate Sensor"
                android:id="@+id/btnActivateSensor" android:layout_gravity="center_vertical"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Deactivate Sensor"
                android:id="@+id/btnDeactivateSensor" android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_gravity="center_horizontal" android:text="Sensor Data"/>
</LinearLayout>

